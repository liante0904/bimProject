<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.bridgeimpact.renewal.boardSQL">
 

 
    	<resultMap type="boardVO"  id="BoardResultMap">
    	<result property="idx" column="IDX" />
    	<result property="id" column="ID" />
		<result property="name" column="NAME" />
		<result property="delGb" column="DELGB" />
		</resultMap>
     
     
    <select id="selectAllBoard" parameterType="String" resultType="boardVO">
	<![CDATA[
	
		SELECT   
		IDX  ,   
		ID  ,   
		NAME  ,   
		DEL_GB    
		FROM   BIM_BOARD_TB 
    ]]>
    
		<if test="value != null">
		WHERE 
		DEL_GB  = #{value}
		</if>
		
    </select>

    
    
    
   	<insert id="insertBoard" parameterType="boardVO">
	<![CDATA[

	
		INSERT INTO BIM_BOARD_TB 
		(
		IDX ,
		ID ,  
		NAME ,  
		DEL_GB   
		) 
		VALUES
		(
		NULL,
		#{id},
		#{name},
		'N'
		)


    ]]>
	</insert>
	
	
	 <select id="selectBoardById" parameterType="String" resultType="int">
	<![CDATA[
	
	
		SELECT   
		count(*)
		FROM   BIM_BOARD_TB   
		WHERE 
		ID = #{id}		
    ]]>
    </select>
    
    
    		<update id="deleteBoardById" parameterType="String">
		<![CDATA[
		
		
		UPDATE BIM_BOARD_TB
		SET 
		DEL_GB = 'Y'
		WHERE 
		ID = #{id} 
		 
		 
		]]>
	</update>
	
