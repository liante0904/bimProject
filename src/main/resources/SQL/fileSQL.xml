<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.bridgeimpact.renewal.fileSQL">
 

 
    	<resultMap type="fileVO"  id="fileResultMap">
   	 	<result property="idx" column="IDX" />
    		<result property="articleIdx" column="ARTICLE_IDX" />
		<result property="originalFileName" column="ORIGINAL_FILE_NAME" />
		<result property="storedFileName" column="STORED_FILE_NAME" />
		<result property="fileSize" column="FILE_SIZE" />
		<result property="creaDtm" column="CREA_DTM" />
		<result property="creaId" column="CREA_ID" />
		<result property="delGb" column="DELGB" />
	</resultMap>
     
     
     
    
   	<insert id="insertFile" parameterType="fileVO">
	<![CDATA[

	
	INSERT INTO BIM_FILE_TB  
	(
	IDX ,
	ARTICLE_IDX ,
	ORIGINAL_FILE_NAME ,
	STORED_FILE_NAME ,
	FILE_SIZE ,
	CREA_DTM ,
	CREA_ID ,
	DEL_GB
	)
	VALUES
	(
	NULL ,
	#{articleIdx } ,
	#{originalFileName } ,
	#{storedFileName } ,
	#{fileSize } ,
	NULL ,
	#{creaId } ,
	'N'
	)




    ]]>
	</insert>
	
     
     
    <select id="selectAllBoard" parameterType="String" resultType="boardVO">
	<![CDATA[
	
		SELECT   
		IDX  ,   
		ID  ,   
		NAME  ,   
		DEL_GB    
		FROM   BIM_BOARD_TB 
    ]]>
    
		<if test="value != null">
		WHERE 
		DEL_GB  = #{value}
		</if>
		
    </select>

    
    	
	 <select id="selectBoardById" parameterType="String" resultType="int">
	<![CDATA[
	
	
		SELECT   
		count(*)
		FROM   BIM_BOARD_TB   
		WHERE 
		ID = #{id}		
    ]]>
    </select>
    
    
    <update id="deleteBoardById" parameterType="String">
		<![CDATA[
		
		
		UPDATE BIM_BOARD_TB
		SET 
		DEL_GB = 'Y'
		WHERE 
		ID = #{id} 
		 
		 
		]]>
	</update>
	
	    <update id="unDeleteBoardById" parameterType="String">
		<![CDATA[
		
		
		UPDATE BIM_BOARD_TB
		SET 
		DEL_GB = 'N'
		WHERE 
		ID = #{id} 
		 
		 
		]]>
	</update>
	
